@model List<Canela.Models.Producto>

<div class="container catalog-container">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    
    @if (!Model.Any())
    {
        <div class="no-products alert alert-warning">
            <strong>¡Atención!</strong> No encontramos productos en oferta.
            <button onclick="location.reload()" class="btn btn-sm btn-warning ms-3">Reintentar</button>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card product-card h-100">
                        <div class="card-img-container">
                            <img src="@item.ImageURL" 
                                 class="card-img-top"
                                 alt="@item.Name"
                                 onerror="this.onerror=null;this.src='https://via.placeholder.com/300?text=Imagen+no+disponible'">
                        </div>
                        <div class="card-body">
                            <h5 class="product-title">@item.Name</h5>
                            <p class="product-price">S/ @item.Price.ToString("0.00")</p>
                            <span class="product-status">@item.Status</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
<style>
    /* Contenedor principal */
    .catalog-container {
        padding: 2rem 0;
    }

    /* Tarjetas de producto */
    .product-card {
        height: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    /* Imágenes responsivas */
    .card-img-container {
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        padding: 10px;
    }

    .card-img-top {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }

    /* Textos y precios */
    .product-title {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .product-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #28a745;
    }

    .product-status {
        font-size: 0.8rem;
        background: #17a2b8;
        color: white;
        padding: 3px 8px;
        border-radius: 4px;
        display: inline-block;
    }

    /* Mensaje sin productos */
    .no-products {
        padding: 2rem;
        text-align: center;
    }
</style>
