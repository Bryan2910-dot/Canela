@model IEnumerable<Canela.Models.Producto>

@{
    ViewData["Title"] = "Productos en Oferta";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@item.ImageURL" class="card-img-top" alt="@item.Name" style="max-height: 200px;">
                    <div class="card-body">
                        <h5>@item.Name</h5>
                        <p class="text-success">Precio: S/ @item.Price</p>
                        <p class="text-muted">@item.Status</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
/* Variables de color basadas en el header */
:root {
    --azul-principal: #1b6ec2;
