@model List<Canela.Models.Producto>

<div class="container catalog-container">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    
    @if (!Model.Any())
    {
        <div class="no-products alert alert-warning">
            <strong>¡Atención!</strong> No encontramos productos en oferta.
            <button onclick="location.reload()" class="btn btn-sm btn-warning ms-3">Reintentar</button>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card product-card h-100">
                        <div class="card-img-container">
                            <img src="@item.ImageURL" 
                                 class="card-img-top"
                                 alt="@item.Name"
                                 onerror="this.onerror=null;this.src='https://via.placeholder.com/300?text=Imagen+no+disponible'">
                        </div>
                        <div class="card-body">
                            <h5 class="product-title">@item.Name</h5>
                            <p class="product-price">S/ @item.Price.ToString("0.00")</p>
                            <span class="product-status">@item.Status</span>
                            <!-- Botón añadido aquí -->
                            <form asp-controller="Carrito" asp-action="Add" method="post" class="mt-2">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-primary w-100">
                                    <i class="bi bi-cart-plus"></i> Añadir
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    /* Variables de color (consistentes con tu diseño principal) */
    :root {
        --rosa-principal: #e83e8c;
        --rosa-claro: #f9d6e8;
        --gris-oscuro: #333;
        --gris-claro: #777;
        --blanco: #fff;
    }

    /* Tipografía */
    body {
        font-family: 'Montserrat', sans-serif;
    }

    /* Contenedor principal */
    .catalog-container {
        padding: 2rem 0;
    }

    h1 {
        color: var(--rosa-principal);
        font-size: 2.5rem;
        text-align: center;
        position: relative;
        margin-bottom: 2rem !important;
    }

    h1::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background-color: var(--rosa-principal);
    }

    /* Tarjetas de producto */
    .product-card {
        height: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #eee;
        border-radius: 10px !important;
        overflow: hidden;
        background: var(--blanco);
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(232, 62, 140, 0.15) !important;
    }

    /* Imágenes responsivas */
    .card-img-container {
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--rosa-claro);
        padding: 10px;
    }

    .card-img-top {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        transition: transform 0.5s ease;
    }

    .product-card:hover .card-img-top {
        transform: scale(1.05);
    }

    /* Textos y precios */
    .product-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--gris-oscuro);
        margin-bottom: 0.5rem;
    }

    .product-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--rosa-principal) !important; /* Precio en rosa */
    }

    .product-status {
        font-size: 0.8rem;
        background: var(--gris-claro);
        color: white;
        padding: 3px 8px;
        border-radius: 4px;
        display: inline-block;
    }

    /* Botón "Añadir" */
    .btn-outline-primary {
        color: var(--rosa-principal);
        border-color: var(--rosa-principal);
    }

    .btn-outline-primary:hover {
        background-color: var(--rosa-principal);
        color: var(--blanco);
    }

    /* Mensaje sin productos */
    .no-products {
        padding: 2rem;
        text-align: center;
        background-color: var(--rosa-claro) !important;
        border-color: var(--rosa-principal) !important;
        color: var(--gris-oscuro);
    }

    .alert-warning .btn-warning {
        background-color: var(--rosa-principal);
        border-color: var(--rosa-principal);
    }
</style>

