@model Canela.Models.Producto
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="CrearProducto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Id" class="form-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PriceText" class="form-label"></label>
                    <input asp-for="PriceText" class="form-control" />
                    <span asp-validation-for="PriceText" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageURL" class="form-label"></label>
                    <input asp-for="ImageURL" class="form-control" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Status" value="en oferta" />

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Productos" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}