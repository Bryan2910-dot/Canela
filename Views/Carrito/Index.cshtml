@model IEnumerable<Canela.Models.PreOrden>
@{
    ViewData["Title"] = "Tu Carrito de Compras";
}

<div class="container py-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>Tu carrito está vacío</h4>
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-primary mt-3">
                <i class="fas fa-arrow-left me-2"></i>Ir al Catálogo
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Producto</th>
                        <th class="text-center">Precio Unitario</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-center">Subtotal</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.Producto?.ImageURL" 
                                     style="width: 50px; height: 50px; object-fit: cover;" 
                                     class="me-3 rounded"
                                     onerror="this.src='https://via.placeholder.com/50'">
                                @item.Producto?.Name
                            </td>
                            <td class="text-center">S/ @item.Precio.ToString("0.00")</td>
                            <td class="text-center">
                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="number" name="cantidad" value="@item.Cantidad" 
                                           min="1" class="form-control form-control-sm d-inline-block" style="width: 70px;">
                                </form>
                            </td>
                            <td class="text-center">S/ @((item.Cantidad * item.Precio).ToString("0.00"))</td>
                            <td class="text-center">
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-secondary">
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Total:</td>
                        <td class="text-center fw-bold">S/ @ViewBag.MontoTotal.ToString("0.00")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Seguir Comprando
            </a>
            <a asp-controller="Pago" asp-action="Resumen" class="btn btn-success">
                Proceder al Pago <i class="fas fa-credit-card ms-2"></i>
            </a>
        </div>
    }
</div>

@section Styles {
<style>
    .table img {
        transition: transform 0.3s;
    }
    .table img:hover {
        transform: scale(1.1);
    }
    .quantity-input {
        width: 70px;
        display: inline-block;
    }
</style>
}

@section Scripts {
<script>
    $(document).ready(function() {
        // Actualiza cantidad al cambiar el input
        $('input[name="cantidad"]').change(function() {
            $(this).closest('form').submit();
        });
    });
</script>
}